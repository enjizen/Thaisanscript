    <style name="SanScriptButton" parent="SanScriptButtonCompat">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:height">44dp</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">@dimen/default_margin_padding</item>
        <item name="android:paddingBottom">@dimen/default_margin_padding</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SanScriptButton.Transparent">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/default_text_size_medium</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="SanScriptButton.Green">
