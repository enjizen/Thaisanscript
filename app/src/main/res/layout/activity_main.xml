<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.thai_sanscript.thaisanscript.activity.MainActivity">

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.ss.bottomnavigation.BottomNavigation
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        app:mode="phone">
        <com.ss.bottomnavigation.TabItem
            android:id="@+id/tab_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:tab_text="@string/menu_main_page"
            app:tab_icon="@drawable/ic_home_white_24dp"
            />

        <com.ss.bottomnavigation.TabItem
            android:id="@+id/tab_translate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:tab_text="@string/menu_translate"
            app:tab_icon="@drawable/ic_translate_white_24dp"

            />

        <com.ss.bottomnavigation.TabItem
            android:id="@+id/tab_article"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:tab_text="@string/menu_item_article"
            app:tab_icon="@drawable/ic_article_unselected_24dp" />

        <com.ss.bottomnavigation.TabItem
            android:id="@+id/tab_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:tab_text="@string/menu_more"
            app:tab_icon="@drawable/ic_more_unselected_24dp"
            />

    </com.ss.bottomnavigation.BottomNavigation>
</RelativeLayout>
